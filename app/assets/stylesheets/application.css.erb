@-webkit-keyframes stainbow {
  0% {background-color: #987C66;}
  20% {background-color: #61513D;}
  40% {background-color: #A35438;}
  60% {background-color: #493726;}
  80% {background-color: #61544B;}
  100% {background-color: #343112;}
}

body {
  width: 100%;
  -webkit-animation-name: stainbow;
  -webkit-animation-duration: 10s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-direction: alternate;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-fill-mode: both;
  -webkit-animation-delay: 0s;
  font-family: 'Averia Libre', cursive;
  color: #F5F0E9;
  text-align: center;
}

#big-poomoji {
  z-index: -1;
  width: 181%;
  height: 181%;
  position: absolute;
  top: -9999px;
  bottom: -9699px;
  left: -9999px;
  right: -9999px;
  margin: auto;
}

#outer-container {
  border-radius: 6%;
  width: 800px;
  height: 600px;
  position: relative;
  margin: 0 auto;
  overflow: hidden;
  box-shadow: 8px 8px #362509;
}

#inner-container {
  height: 60px;
}

#inner-footer {
  position: absolute;
  bottom: -10px;
}

h1 {
  text-shadow: 5px 5px #362509;
  position: relative;
  top: -43px;
  font-size: 3.5em;
}

h2 {
  font-size: 1.2em;
}

.shartened-header {
  background-color: rgba(54, 37, 9, 0.55);
}

#shartener-form {
  margin: 0 auto;
  width: 550px;
  position: relative;
  top: 250px;
}

#shartener-form input[type=text] {
  height: 140px;
  border:none;
  width: 100%;
  -webkit-animation-name: stainbow;
  -webkit-animation-duration: 10s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-direction: alternate;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-fill-mode: both;
  -webkit-animation-delay: 0s;
  border-radius: 12% 12% 50% 50%;
  font-family: 'Finger Paint', cursive;
  font-size: 24px;
  color: #F5F0E9;
  text-align: center;
  box-shadow: inset 8px 8px #362509
}

#shartener-button {
  height: 50px;
  width: 200px;
  border-radius: 50%;
  -webkit-animation-name: stainbow;
  -webkit-animation-duration: 0.5s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-direction: alternate;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-fill-mode: both;
  -webkit-animation-delay: 0s;
  font-family: 'Averia Libre', cursive;
  font-size: 30px;
  color: #F5F0E9;
  border: none;
  box-shadow: 4px 4px #362509;
  position: relative;
  top: -60px;
  left: 290px;
  cursor: url(<%= image_path "/assets/images/poo-cursor.png" %>), auto;
}

input::-webkit-input-placeholder {
  color: #F5F0E9 !important;
}
 
input:-moz-placeholder { /* Firefox 18- */
  color: #F5F0E9 !important;  
}
 
input::-moz-placeholder { /* Firefox 19+ */
  color: #F5F0E9 !important;  
}
 
input:-ms-input-placeholder { /* IE 10+ */
  color: #F5F0E9 !important;  
}

input:focus::-webkit-input-placeholder { 
  opacity: 0; 
}
input:focus:-moz-placeholder { /* Firefox 18- */
  opacity: 0; 
} 

input:focus::-moz-placeholder { /* Firefox 19+ */
  opacity: 0; 
}
input:focus:-ms-input-placeholder { /* IE 10+ */
  opacity: 0; 
}

.link:link {
  color: #fff;
  cursor: url(<%= image_path "/assets/images/poo-cursor.png" %>), auto;
}

.link:hover {
  color: #000;
  cursor: url(<%= image_path "/assets/images/poo-cursor.png" %>), auto;
}

.link:visited {
  color: #fff;
  cursor: url(<%= image_path "/assets/images/poo-cursor.png" %>), auto;
}

#url-info {
  position: relative;
  margin: 0 auto;
  top: 280px;
  width: 400px;
  border-radius: 12% 12% 50% 50%;
  background-color: rgba(54, 37, 9, 0.55);
}

.home-link {
  height: 50px;
  width: 200px;
  border-radius: 50%;
  -webkit-animation-name: stainbow;
  -webkit-animation-duration: 0.5s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-direction: alternate;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-fill-mode: both;
  -webkit-animation-delay: 0s;
  font-family: 'Averia Libre', cursive;
  font-size: 30px;
  color: #F5F0E9;
  border: none;
  box-shadow: 4px 4px #362509;
  position: relative;
  top: 235px;
  left: 290px;
  cursor: url(<%= image_path "/assets/images/poo-cursor.png" %>), auto;
}

#show-link {
  position: relative;
  top: -35px;
}

#error-catcher {
  margin: 0 auto;
  height: 80px;
  width: 700px;
  position: relative;
  top: -30px;
  text-shadow: 5px 5px #362509;
}

#errors {
  width: 100%;
  height: 100%;
  border-radius: 4%;
  background-color: rgba(54, 37, 9, 0.55);
  background-image: url(<%= image_path "/assets/images/teardrop.png" %>);
  background-repeat: no-repeat;
  background-position: -2% -0%;
}

#errors ul {
  list-style: none;
  position: relative;
  top: 5px;
}

